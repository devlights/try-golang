{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "1.17",
			"NODE_VERSION": "lts/*"
		}
	},
	"runArgs": [ 
		"--cap-add=SYS_PTRACE", 
		"--security-opt", 
		"seccomp=unconfined" 
	],
	"settings": {
		"go.toolsManagement.checkForUpdates": "local",
		"go.useLanguageServer": true,
		"go.gopath": "/go",
		"go.goroot": "/usr/local/go"
	},
	"features": {
		"docker-from-docker": "20.10"
	},
	"extensions": [
		"golang.Go",
		"dracula-theme.theme-dracula"
	],
	// "forwardPorts": [],
	"postCreateCommand": "go version ; make prepare ; go install github.com/go-task/task/v3/cmd/task@latest",
	"remoteUser": "vscode"
}
